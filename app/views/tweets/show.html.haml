%h2 Details about Tweet ID #{@tweet.id}

%ul#details
	%li
		User Id:
		=	@tweet.userid
	%li
		Tweet Body:
		=	@tweet.text

=	link_to 'Edit info', edit_tweet_path(@tweet)
=	link_to 'Delete', tweet_path(@tweet), :method => :delete, :confirm => 'Are you sure?'
=	link_to 'Back to tweets list', tweets_path